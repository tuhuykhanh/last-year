<section class="sections">
    <div class="container-createpost">
        <div class="form-input">
            <div class="title">Create</div>
            <form action="/admin/create" method="POST" class="form" id="form-1" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="Title" class="form-label">Title</label>
                    <input id="Title" value="" name="title" type="text" placeholder="Title"
                        class="form-control">
                    <span class="form-message"></span>
                </div>

                <div class="form-group">
                    <label for="thumbnail" class="form-label">Thumbnail</label>
                    <input id="thumbnail" name="thumbnail" type="file"  class="form-control">
                    <span class="form-message"></span>
                </div>

                <div class="form-group">
                    <label for="description" class="form-label">Description</label>
                    <textarea id="description" name="description"
                                rows="5" cols="33"></textarea>
                    <span class="form-message"></span>
                </div>

                <div class="form-group">
                    <label for="content" class="form-label">Content</label>
                    <textarea name="content" id="content" cols="30" rows="10">

                    </textarea>
                    <span class="form-message"></span>
                </div>
                <button class="form-submit">Create Post</button>
            </form>
        </div>
        <div class="form-review">
            <div class="title">Review</div>     
        </div>
    </div>
</section>

<script>   
    CKEDITOR.replace( 'content', {      
	    "extraPlugins" : 'imagebrowser',
		"imageBrowser_listUrl" : "/files" 
    });
</script>






