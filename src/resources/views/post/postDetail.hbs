<section class="section">
    <div class="container-postdetail">
        <div class="post-header">
            <div class="date-create">
                <span class="left">{{post.category.name}}</span>

                <span class="right">{{post.createdAt}}</span>
            </div>
            <h2 class="title">
                {{post.title}}
            </h2>
        </div>
        <div class="post-body">
            <div class="description">
                <p>{{post.description}}</p>
            </div>
            <div class="container-image">
                <div class="image">
                    <img src="/{{post.thumbnail}}" alt="thumbnail">
                </div>
            </div>

            <div class="content">
                {{{ post.content }}}
            </div>
            <div class="contentreal">
            </div>
            <div class="author">
                <h3 class="name">By: {{post.user.username}}</h3>
            </div>

        </div>
    </div>

</section>

<section class="section">

    <div class="container-comment">

        <div class="box-title">
            <h3 class="title">Comment</h3>
        </div>

        <div class="comment-enter">

            <input class="contentcomment" type="text" contenteditable="true" name="contentcomment">

            <div class="btn-send-comment">send</div>

        </div>

        <div class="comments-box">
            {{#each comments}}
                <div class="box">
                    <div class="avata">
                        <img src="/{{this.iduser.avatar}}"
                            alt="">
                    </div>

                    <div class="content">

                        <div class="username">
                            <h3>{{this.iduser.username}}</h3>
                            <smal class="time"> oke chua</smal>
                        </div>
                        <p>{{this.content}}</p>
                    </div>

                </div>
            {{/each}}


        </div>
        <div class="ontyping">
            <p></p>
        </div>
    </div>
</section>


<section class="section">

    <div class="container-related">
        <div class="box-title">
            <h3 class="title">Bài viết liên quan</h3>
        </div>
        {{#each postscates}}
        <div class="box-post">
            <div class="image">
                <a href="/post/{{this.slug}}">
                    <img src="/{{this.thumbnail}}" alt="">
                </a>
            </div>
            <div class="content">
                <a href="/post/{{this.slug}}">
                    <h3 class="title">
                        {{this.title}}
                    </h3>
                </a>
                <a href="/post/{{this.slug}}">
                    <p class="description">
                        {{this.description}}
                    </p>
                </a>
            </div>
        </div>
        {{/each}}
    </div>
</section>

